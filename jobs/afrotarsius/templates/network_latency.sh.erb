#!/bin/bash

RUN_DIR=/var/vcap/sys/run/afrotarsius
PIDFILE=$RUN_DIR/afrotarsius.pid

mkdir -p $RUN_DIR

NETWORK_DELAY=<%=p("tarsii.afrotarsius.delay")%>ms
NETWORK_JITTER=<%=p("tarsii.afrotarsius.jitter")%>ms

function do_delay {
    sleep 60

    tc qdisc delete dev eth0 root netem || true

    tc qdisc add dev eth0 root netem delay $NETWORK_DELAY $NETWORK_JITTER

    until [ `tc qdisc show dev eth0 | grep netem | wc -l` -eq 0 ]; do sleep 10; done
}

case $1 in

  start)
    do_delay &

    echo $! > $PIDFILE
    ;;

  stop)
    tc qdisc delete dev eth0 root netem || true
    ;;

  *)
    echo "Usage: network_latency.sh {start|stop}"

    ;;

esac
